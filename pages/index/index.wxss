/**index.wxss**/
page {
  height: 100vh;
  background-color: #fff5f5;
  font-family: 'Microsoft YaHei', sans-serif;
}

.scrollarea {
  height: 100%;
  padding-top: 90rpx; /* 为导航栏留出空间 */
}

.container {
  padding: 0 30rpx 50rpx;
}

.header {
  position: relative;
  height: 900rpx;
  margin: 20rpx 0 5rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.wedding-photo {
  width: 100%;
  height: 100%;
}

.overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
}

.title-container {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  margin-bottom: 10rpx;
}

.names {
  font-size: 36rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.content {
  padding: 5rpx 0;
}

.info-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffcccb;
}

.info-title {
  font-size: 36rpx;
  color: #e74c3c;
  text-align: center;
  font-weight: bold;
  margin-bottom: 15rpx;
  line-height: 1.3;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 15rpx;
  line-height: 1.3;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  border-bottom: 1rpx dashed #ffcccb;
  padding-bottom: 8rpx;
}

.info-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.blessing-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-top: 25rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffcccb;
  text-align: center;
}

.blessing-title {
  font-size: 36rpx;
  color: #e74c3c;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.blessing-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.footer {
  text-align: center;
  margin-top: 30rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}
