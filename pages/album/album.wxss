page {
  height: 100vh;
  background-color: #fff5f5;
  font-family: "Microsoft YaHei", sans-serif;
}

.scrollarea {
  height: 100%;
  padding-top: 90rpx; /* 为导航栏留出空间 */
}

.container {
  padding: 0 30rpx 50rpx;
}

.album-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #e74c3c;
  text-align: center;
  margin: 30rpx 0;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 轮播相册样式 */
.swiper-container {
  margin: 20rpx 0 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  background-color: white;
  border: 2rpx solid #ffcccb;
}

.swiper {
  height: 500rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: white;
  font-size: 28rpx;
  padding: 20rpx;
  text-align: center;
}

/* 照片网格样式 */
.grid-container {
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #ffcccb;
}

.grid-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 20rpx;
  text-align: center;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.grid-item {
  width: calc(50% - 10rpx); /* 从33.33%改为50%，实现2列布局 */
  height: 450rpx; /* 增加高度，从330rpx调整为450rpx，避免图片被裁减 */
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 204, 203, 0.5);
}

.grid-image {
  width: 100%;
  height: 100%;
}

.album-footer {
  text-align: center;
  margin: 40rpx 0 20rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}
